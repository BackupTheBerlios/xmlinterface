<?xml version="1.0" encoding="UTF-8"?><xmlgui xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="\..\xsd\xmlInterface.xsd">	<widgets>		<!-- widget - window komponente allgemein uiType - WidgetStyle -->		<widget name="Fenster" type="window" uiType="">			<!-- properties beschreiben widget -->			<properties>				<property name="width">100</property>				<property name="height">100</property>				<property name="xCoord">0</property>				<property name="yCoord">0</property>				<property name="title">FensterTitel</property>			</properties>			<!-- besonderes event ausloesen -->			<events>				<event name="close" type="closeEvent"/>				<event name="minimize" type="minimizeEvent"/>				<event name="maximize" type="maximizeEvent"/>			</events>			<widgets>				<widget name="MenuBar" type="menuBar">				<properties>					<property name="width">100</property>					<property name="height">10</property>					<property name="xCoord">100</property>					<property name="yCoord">0</property>							</properties>					<widgets>						<widget name="FileMenu" type="Menu">							<properties>								<property name="text">File</property>								<!-- menueintrag file reagiert auf Alt+F -->								<property name="mnemonic">Alt+F</property>								<property name="width">100</property>						<property name="height">10</property>						<property name="xCoord">0</property>						<property name="yCoord">0</property>							</properties>							<widgets>								<widget name="open" type="MenuItem">									<properties>										<property name="text">Oeffnen...</property>									</properties>									<events>										<event name="openPressed" type="mouseEvent">leftClick</event>									</events>								</widget>								<widget name="ende" type="MenuItem">									<properties>										<property name="text">Exit...</property>									</properties>								</widget>							</widgets>						</widget>					</widgets>				</widget>				<widget name="Knopf" type="button" uiType="">					<properties>						<property name="width">10</property>						<property name="height">10</property>						<property name="xCoord">0</property>						<property name="yCoord">0</property>						<property name="text">ButtonText</property>					</properties>					<events>						<!-- mPressed - name der fkt. mit eventinhalt aus dem eigenen srcCode						event wird an die globale CallBackMethod uebermittelt und dann an mPressed weiter deligiert -->						<event name="mPressed" type="mousePressEvent">leftClick</event>					</events>				</widget>				<widget name="TextField1" type="textfield">					<properties>						<property name="width">10</property>						<property name="height">10</property>						<property name="xCoord">0</property>						<property name="yCoord">0</property>						<property name="text">Initialisierungstext des Textfeldes</property>					</properties>					<events>						<!-- einfacher Undo/Redo-Manager -->						<event name="undoPressed" type="keyPressEvent">Ctrl+Z</event>						<event name="redoPressed" type="keyPressEvent">Ctrl+Y</event>					</events>				</widget>				<widget name="ComboBox1" type="combobox">					<properties>						<property name="width">10</property>						<property name="height">10</property>						<property name="xCoord">0</property>						<property name="yCoord">0</property>						<property name="text">ButtonText</property>					</properties>					<events>						<!-- mPressed - name der fkt. mit eventinhalt eigener srcCode -->						<event name="mPressed" type="mousePressEvent" uiType=""/>					</events>					<widgets>						<widget name="element1" type="comboboxElement">							<properties>								<property name="text">Element1</property>							</properties>						</widget>						<widget name="element2" type="button">							<properties>								<property name="text">Element2</property>							</properties>						</widget>					</widgets>				</widget>				<widget name="CheckBox1" type="checkox">					<properties>						<property name="width">10</property>						<property name="height">10</property>						<property name="xCoord">0</property>						<property name="yCoord">0</property>						<property name="text">ChecBoxText</property>						<!-- checked vom type boolean -->						<property name="checked">false</property>					</properties>					<events>						<!-- mPressed - name der fkt. mit eventinhalt eigener srcCode -->						<event name="mPressed" type="mousePressEvent" uiType=""/>					</events>				</widget>			</widgets>		</widget>	</widgets></xmlgui>